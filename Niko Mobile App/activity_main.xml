<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B0F14"
    android:id="@+id/mainLayout" >

    <!-- HALO (ARKA IŞIK) -->

    <View
        android:id="@+id/orbHalo"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:layout_centerInParent="true"
        android:background="@drawable/orb_halo" />

    <!-- ANA ORB -->

    <View
        android:id="@+id/voiceOrb"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerInParent="true"
        android:background="@drawable/orb_gradient" />

    <!-- AI CEVAP METNİ -->

    <ScrollView
        android:id="@+id/aiResponseContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/orbHalo"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="32dp"
        android:fillViewport="true"
        android:visibility="gone"
        android:overScrollMode="never"
        android:scrollbars="vertical" >

        <TextView
            android:id="@+id/txtAIResponse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ai_response_bg"
            android:fontFamily="sans-serif-light"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="6dp"
            android:padding="20dp"
            android:shadowColor="#00E5FF"
            android:shadowRadius="12"
            android:text=""
            android:textColor="#E6F9FF"
            android:textSize="18sp" />
    </ScrollView>

    <!-- DURUM METNİ (DEBUG) -->

    <TextView
        android:id="@+id/txtDebug"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btnMic"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:text="Hazır"
        android:textColor="#88FFFFFF"
        android:textSize="14sp" />

    <!-- MİKROFON BUTONU -->

    <ImageButton
        android:id="@+id/btnMic"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="48dp"
        android:background="@drawable/mic_button"
        android:src="@android:drawable/ic_btn_speak_now"
        android:tint="#FFFFFF" />

    <!-- GEÇMİŞ BUTONU -->

    <ImageButton
        android:id="@+id/btnHistory"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_margin="16dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_menu_recent_history"
        android:tint="#FFFFFF" />

    <!-- GEÇMİŞ PANELİ (GİZLİ) -->

    <LinearLayout
        android:id="@+id/layoutHistory"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E60B0F14"
        android:orientation="vertical"
        android:padding="24dp"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sohbet Geçmişi"
                    android:textColor="#FFFFFF"
                    android:textSize="28sp"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/txtHistoryStats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 mesaj"
                    android:textColor="#88FFFFFF"
                    android:textSize="13sp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="sans-serif-light" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/btnCloseHistory"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:tint="#FFFFFF" />
        </RelativeLayout>

        <!-- ARAMA ÇUBUĞU -->
        <EditText
            android:id="@+id/edtHistorySearch"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/ai_response_bg"
            android:hint="Geçmişte ara..."
            android:textColorHint="#55FFFFFF"
            android:textColor="#FFFFFF"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textSize="14sp"
            android:drawableStart="@android:drawable/ic_menu_search"
            android:drawablePadding="12dp"
            android:drawableTint="#88FFFFFF"
            android:imeOptions="actionSearch"
            android:inputType="text" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:overScrollMode="never"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/containerHistoryItems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </ScrollView>

        <Button
            android:id="@+id/btnClearHistory"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="#2DFF4444"
            android:text="Geçmişi Temizle"
            android:textColor="#FF4444"
            android:textAllCaps="false"
            android:textSize="16sp" />

    </LinearLayout>

</RelativeLayout>