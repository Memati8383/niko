<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- BASILI DURUM -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#4DFF5252"/>
            <corners android:radius="18dp"/>
            <stroke android:width="1.5dp" android:color="#FF5252"/>
        </shape>
    </item>
    <!-- VARSAYILAN DURUM -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1AFF5252"/>
            <corners android:radius="18dp"/>
            <stroke android:width="1dp" android:color="#33FF5252"/>
        </shape>
    </item>
</selector>
